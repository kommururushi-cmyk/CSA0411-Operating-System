#include <stdio.h>

int main() {
    int n;
    printf("Number of processes: "); scanf("%d", &n);
    int bt[n];
    for (int i=0;i<n;i++) { printf("Burst time P%d: ", i+1); scanf("%d", &bt[i]); }

    int wt[n]; // waiting time
    int tat[n]; // turnaround
    wt[0] = 0;
    for (int i=1;i<n;i++) wt[i] = wt[i-1] + bt[i-1];
    for (int i=0;i<n;i++) tat[i] = wt[i] + bt[i];

    double awt=0, atat=0;
    printf("P\tBT\tWT\tTAT\n");
    for (int i=0;i<n;i++) {
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);
        awt += wt[i]; atat += tat[i];
    }
    printf("Average WT= %.2f, Average TAT= %.2f\n", awt/n, atat/n);
    return 0;
}
