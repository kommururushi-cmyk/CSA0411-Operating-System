#include <stdio.h>
#include <limits.h>

int main(){
    int n; printf("Number of processes: "); scanf("%d", &n);
    int bt[n], done[n];
    for(int i=0;i<n;i++){ printf("P%d burst: ", i+1); scanf("%d", &bt[i]); done[i]=0; }
    int completed=0, time=0;
    int wt[n], tat[n];
    while (completed<n){
        int idx=-1, min=INT_MAX;
        for(int i=0;i<n;i++) if(!done[i] && bt[i]<min){ min=bt[i]; idx=i; }
        if(idx==-1) break;
        wt[idx]=time; time += bt[idx]; tat[idx]=time; done[idx]=1; completed++;
    }
    double awt=0, atat=0;
    printf("P\tBT\tWT\tTAT\n");
    for(int i=0;i<n;i++){ printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]); awt+=wt[i]; atat+=tat[i]; }
    printf("Avg WT=%.2f Avg TAT=%.2f\n", awt/n, atat/n);
    return 0;
}
