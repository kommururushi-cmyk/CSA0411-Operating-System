#include <stdio.h>

int main() {
    int n, frames, i, j, page_faults=0;
    printf("Enter number of pages: ");
    scanf("%d",&n);
    int pages[n];
    printf("Enter page reference string:\n");
    for(i=0;i<n;i++) scanf("%d",&pages[i]);
    printf("Enter number of frames: ");
    scanf("%d",&frames);

    int f[frames], time[frames];
    for(i=0;i<frames;i++) f[i] = -1;

    for(i=0;i<n;i++) {
        int flag=0;
        for(j=0;j<frames;j++) if(f[j]==pages[i]) {flag=1; time[j]=i;} 
        if(flag==0) {
            int lru = 0;
            for(j=1;j<frames;j++) if(time[j]<time[lru]) lru=j;
            f[lru] = pages[i]; time[lru]=i; page_faults++;
        }
        for(j=0;j<frames;j++) printf("%d\t", f[j]);
        printf("\n");
    }
    printf("Total Page Faults: %d\n", page_faults);
    return 0;
}
