#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>

#define BUFSIZE 4096

int main(int argc, char *argv[]) {
    if (argc != 3) {
        fprintf(stderr, "Usage: %s source_file dest_file\n", argv[0]);
        return 1;
    }
    int fd_src = open(argv[1], O_RDONLY);
    if (fd_src < 0) { perror("open src"); return 1; }
    int fd_dest = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (fd_dest < 0) { perror("open dest"); close(fd_src); return 1; }

    ssize_t n;
    char buf[BUFSIZE];
    while ((n = read(fd_src, buf, BUFSIZE)) > 0) {
        ssize_t w = 0;
        while (w < n) {
            ssize_t m = write(fd_dest, buf + w, n - w);
            if (m < 0) { perror("write"); close(fd_src); close(fd_dest); return 1; }
            w += m;
        }
    }
    if (n < 0) perror("read");
    close(fd_src); close(fd_dest);
    return 0;
    }
